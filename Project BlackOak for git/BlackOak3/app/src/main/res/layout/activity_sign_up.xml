<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:background="#000"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BlackOak"
                    android:textColor="#fff"
                    android:textSize="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/cantora_one"
                    />
                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_110sdp"
                    android:backgroundTint="#000"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="log in" />

                </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account "
                android:textColor="#fff"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="@dimen/_15sdp"

                />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_190sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_bg"
        android:gravity="center_vertical"
        android:hint="First Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="@dimen/_20sdp" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/firstname"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_bg"
        android:gravity="center_vertical"
        android:hint="Last Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="@dimen/_20sdp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/LastName"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_bg"
        android:gravity="center_vertical"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="@dimen/_20sdp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_bg"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/_20sdp" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/password"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_bg"
        android:gravity="center_vertical"
        android:hint="Mobile No"
        android:inputType="number"
       android:maxLength="10"
        android:maxLines="1"
        android:paddingLeft="@dimen/_20sdp" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/mobile"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_bg"
        android:gravity="center_vertical"
        android:hint="Address"
        android:inputType="text"
        android:maxLength="50"
        android:maxLines="1"
        android:paddingLeft="@dimen/_20sdp" />

    <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                      android:orientation="horizontal"
                 >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="I agree to the BlackOak Privacy Policy."
                        android:textColor="#C36D6B6B" />
                </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/finish01"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_button_bd_2"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:text="Finish"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you have your already account then log In."
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        />

        </LinearLayout>

</RelativeLayout>