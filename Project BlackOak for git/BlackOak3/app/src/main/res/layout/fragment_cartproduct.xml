<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75DBD8D8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cart_Product">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:id="@+id/ProfileCardVIew1" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:fontFamily="@font/inria_serif_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Cart"
            android:textColor="#000"
            android:textSize="@dimen/_20sdp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bcd1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/_75sdp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardElevation="11dp">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/c007" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="designing chair"
            android:layout_marginLeft="@dimen/_140sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 999"
            android:layout_marginLeft="@dimen/_140sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="@dimen/_40sdp"
            />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/s45"
            android:layout_marginLeft="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_70sdp"
            />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bcd2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
       android:layout_marginTop="@dimen/_200sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="11dp">
        <ImageView
            android:layout_width="@dimen/_88sdp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:src="@drawable/c002"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="designing chair"
            android:layout_marginLeft="@dimen/_140sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 490"
            android:layout_marginLeft="@dimen/_140sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_40sdp"
            />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/s45"
            android:layout_marginLeft="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_70sdp"
            />


    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____________________________________________"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_40sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="#AFAAAA"

        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total   Rs.1199 "
        android:textSize="@dimen/_18sdp"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/paybtn"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="40dp"
        android:text="PAY"
        android:textColor="#fff"
        android:textSize="30sp"
        android:background="@drawable/custome_button_3"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        />


</LinearLayout>



</FrameLayout>