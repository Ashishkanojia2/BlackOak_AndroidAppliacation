<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/container"
    tools:context=".Sign_up_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:background="#FFFFFF"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BlackOak"
                android:textColor="#000000"
                android:textSize="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:fontFamily="@font/cantora_one"
                />
            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_110sdp"
                android:backgroundTint="#000"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Sign Up" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In Your Account "
            android:textColor="#000"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="@dimen/_15sdp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/email02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_190sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/custome_button_3"
            android:gravity="center_vertical"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="#fff"
            android:textColorHint="#ffff" />

        <EditText
            android:id="@+id/password02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/custome_button_3"
            android:gravity="center_vertical"
            android:hint="Password"
            android:maxLines="1"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="#fff"
            android:textColorHint="#ffff" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="I agree to the BlackOak Privacy Policy."
                android:textColor="#C3D2CECE" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finish"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custome_button_bg"
            android:gravity="center"
            android:text="Finish"
            android:textColor="#000" />
    </LinearLayout>
</RelativeLayout>